use flow
use stack



#(Factor-Addend::Int, Factor-Count::Int) => (Product::Int)
    let product beknown
    label math::mul::done
        push product
        call stack::swap
        return
label math::multiply
label math::mul
    call stack::swap
    pull factor-count
    call stack::swap
    pull factor-addend

    let product be 0

    label math::mul::loop
        if factor-count equal 0 goto math::mul::done
        let product be product plus factor-addend
        let factor-count be factor-count minus 1
    goto math::mul::loop





#(Numerator::Int, Denominator::Int) => (Quotient::Int)
    let quotient beknown
    label math::div::done
        push quotient
        call stack::swap
        return
label math::divide
label math::div
    call stack::swap
    pull denominator
    call stack::swap
    pull numerator

    let quotient be 0

    label math::div::loop
        if numerator lesser denominator goto math::div::done
        let numerator be numerator minus denominator
        let quotient be quotient plus 1
    goto math::div::loop


#(N::Int) => (N+1::Int)
label math::inc
    call stack::swap
    pull n
    let n be n plus 1
    push n
    call stack::swap
    return

#(N::Int) => (N-1::Int)
label math::dec
    call stack::swap
    pull n
    let n be n minus 1
    push n
    call stack::swap
    return

